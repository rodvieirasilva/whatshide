{
  "manifest_version": 2,

  "name": "WhatsHide",
  "description": "This extension remove chats of WhatsApp tab by tags",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html",
    "default_title": "Edit tags remove WhatsApp"
  },

  "content_scripts": [
    {
      "matches": ["http://web.whatsapp.com/*", "https://web.whatsapp.com/*", "http://whatsapp.com/*", "https://whatsapp.com/*"],
      "js": ["/scripts/jquery-3.1.0.min.js", "/scripts/filterdom.js"]
    }
  ],


  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]



}
